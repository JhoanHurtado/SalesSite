@model SalesSite.Web.Dtos.InvoiceModelDto

@{
    ViewData["Title"] = "Details";
}

<h1>Details invoice</h1>

<div>
    <h4>Invoice information</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.invoiceDto.BuyDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.invoiceDto.BuyDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.invoiceDto.Total)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.invoiceDto.Total)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.invoiceDto.TotalProducts)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.invoiceDto.TotalProducts)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.invoiceDto.ClientId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.invoiceDto.UserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.invoiceDto.UserId)
        </dd>
    </dl>
</div>
<div>
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceDetails.FirstOrDefault().Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceDetails.FirstOrDefault().UnitValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceDetails.FirstOrDefault().TotalProduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceDetails.FirstOrDefault().ProducId)
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.InvoiceDetails) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalProduct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProducId)
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
